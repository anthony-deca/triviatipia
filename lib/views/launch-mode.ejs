      });
      learnLink.addEventListener("click", () => {
        learnLink.classList.add("active");
        homeLink.classList.remove("active");
        profLink.classList.remove("active");
      });

      // dynamically change background color of body
      let colorsIndex = 0;
      let colors = ["#ffc107", "#def2f9", "#ffffff", "#007bff"];
      let res = setInterval(ChangeBackgroundColor, 3000);
      function ChangeBackgroundColor() {
        document.body.classList.add("transition");
        document.body.style.backgroundColor = colors[colorsIndex];
        colorsIndex += 1;
        if (colorsIndex == colors.length) {
          colorsIndex = 0;
        }
      }

      //copy event listener
      const copyBtn = document.getElementById("copy")
      let linkSpan = document.getElementById("invite-link")
      copyBtn.addEventListener("click", copyLink.bind(null, linkSpan.textContent));

      //copy a todo to clipboard
      function copyLink(text) {
        if (!navigator.clipboard) {
          fallbackCopyTextToClipboard(text);
          return;
        }
        navigator.clipboard.writeText(text).then(
          function () {
            console.log("Async: Copying to clipboard was successful!");
          },
          function (err) {
            console.error("Async: Could not copy text: ", err);
          }
        );
      }

      // dark mode
      const themeSwitch = document.querySelector("input");
      let count = 0;

      themeSwitch.addEventListener("change", () => {
